        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/src/TStoCSharp.ts",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "args": [
                "./test/definitions/interfaces/MethodReturnObjArray.d.ts"
                
